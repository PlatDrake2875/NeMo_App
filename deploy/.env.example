# NeMo App - Environment Variables Template
# Copy this file to .env and customize as needed

# ============================================
# vLLM Configuration
# ============================================
# Base URL for vLLM service (OpenAI-compatible API)
VLLM_BASE_URL=http://vllm:8000

# Model served by vLLM
VLLM_MODEL=meta-llama/Llama-3.2-3B-Instruct

# Optional: HuggingFace token for gated models (e.g., Llama)
# HUGGING_FACE_HUB_TOKEN=your_token_here

# ============================================
# PostgreSQL Configuration
# ============================================
# PostgreSQL host (service name in Docker Compose)
POSTGRES_HOST=postgres

# PostgreSQL port
POSTGRES_PORT=5432

# PostgreSQL database name
POSTGRES_DB=nemo_rag

# PostgreSQL user
POSTGRES_USER=nemo_user

# PostgreSQL password
POSTGRES_PASSWORD=nemo_password

# Collection/table name for vector storage
COLLECTION_NAME=rag_documents

# ============================================
# Embedding Configuration
# ============================================
# Sentence Transformer model for embeddings
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# ============================================
# Feature Flags
# ============================================
# Enable NeMo Guardrails
USE_GUARDRAILS=false

# Enable RAG (Retrieval Augmented Generation)
RAG_ENABLED=false

# ============================================
# File Upload Configuration
# ============================================
# Directory for temporary file uploads
UPLOAD_DIR=temp_uploads

# ============================================
# Frontend Configuration
# ============================================
# Backend API URL (for frontend)
VITE_API_BASE_URL=http://backend:8000

# Enable file watching in Docker (required for hot reload)
CHOKIDAR_USEPOLLING=true

# ============================================
# Development Settings
# ============================================
# Set to 'development' or 'production'
NODE_ENV=development

# FastAPI debug mode (automatically enabled with --reload)
# FASTAPI_DEBUG=true
